        <section class="double-line">
          <div class="radio-group">
            <h4>Did you meet any new characters?</h4>

            <div class="radio-options">
              <label for="yes">Yes</label>
              <input id="yes" type="radio" name="new-character" value="yes" />

              <label for="no">No</label>
              <input id="no" type="radio" name="new-character" value="no" />
            </div>
          </div>

          <!-- <div class="radio-group">
