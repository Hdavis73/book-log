            <input type="text" name="chapter-title" />
          </div>

          <div class="label-input-pair">
            <label for="chapter-number">Chapter Number:</label>
            <input type="number" name="chapter-number" />
          </div>
        </section>

        <section class="single-line">
          <div class="label-input-pair">
            <label for="summary">Summary:</label>
            <textarea name="summary" rows="6"></textarea>
          </div>
        </section>

